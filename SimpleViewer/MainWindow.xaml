<Window x:Class="SimpleViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleViewer"
        mc:Ignorable="d"
        Title="Simple Viewer" Height="600" Width="900"
        Icon="assets/SimpleViewer.ico"
        Background="Black"
        PreviewKeyDown="Window_PreviewKeyDown"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        AllowDrop="True"
        DragEnter="Window_DragEnter"
        DragOver="Window_DragOver"
        Drop="Window_Drop">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid AllowDrop="True"
          DragEnter="Window_DragEnter"
          DragOver="Window_DragOver"
          Drop="Window_Drop">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="ControlPanel"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Padding="6"
                Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0"
                            VerticalAlignment="Center">
                    <Button x:Name="BrowseButton"
                            Width="36"
                            Height="32"
                            Margin="4,0"
                            Click="BrowseButton_Click"
                            ToolTip="Select Folder"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FocusVisualStyle="{x:Null}"/>
                    <Button x:Name="RecentFoldersButton"
                            Width="36"
                            Height="32"
                            Margin="4,0"
                            Click="RecentFoldersButton_Click"
                            ToolTip="Recent folders"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FocusVisualStyle="{x:Null}">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="RecentFoldersContextMenu">
                                <MenuItem Header="(No recent folders)"
                                          IsEnabled="False"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button x:Name="OptionsButton"
                            Width="36"
                            Height="32"
                            Margin="4,0"
                            Click="OptionsButton_Click"
                            ToolTip="Options"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FocusVisualStyle="{x:Null}">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="OptionsContextMenu"
                                         Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"
                                         Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}">
                                <MenuItem Header="Filters" StaysOpenOnClick="True">
                                    <StackPanel Margin="6,4">
                                        <CheckBox x:Name="ImagesCheckBox"
                                                  Content="Images"
                                                  Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                                                  IsChecked="True"
                                                  Checked="FilterCheckBox_Changed"
                                                  Unchecked="FilterCheckBox_Changed"
                                                  Margin="0,2"/>
                                        <CheckBox x:Name="VideosCheckBox"
                                                  Content="Videos"
                                                  Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                                                  IsChecked="True"
                                                  Checked="FilterCheckBox_Changed"
                                                  Unchecked="FilterCheckBox_Changed"
                                                  Margin="0,2"/>
                                        <CheckBox x:Name="RecursiveCheckBox"
                                                  Content="Subfolders"
                                                  Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                                                  Checked="RecursiveCheckBox_Changed"
                                                  Unchecked="RecursiveCheckBox_Changed"
                                                  Margin="0,2"/>
                                    </StackPanel>
                                </MenuItem>
                                <MenuItem Header="Slideshow" StaysOpenOnClick="True">
                                    <StackPanel Margin="6,4">
                                        <CheckBox x:Name="SlideshowCheckBox"
                                                  Content="Enable slideshow"
                                                  Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                                                  Checked="SlideshowCheckBox_Changed"
                                                  Unchecked="SlideshowCheckBox_Changed"
                                                  Margin="0,2"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <TextBlock Text="Interval (s):"
                                                       Foreground="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,6,0"/>
                                            <TextBox x:Name="SlideshowIntervalBox"
                                                     Width="42"
                                                     MaxLength="3"
                                                     Text="4"
                                                     VerticalContentAlignment="Center"
                                                     TextAlignment="Center"
                                                     TextChanged="SlideshowIntervalBox_TextChanged"/>
                                        </StackPanel>
                                    </StackPanel>
                                </MenuItem>
                                <MenuItem Header="View">
                                    <MenuItem x:Name="SingleViewMenuItem"
                                              Header="Single view"
                                              IsCheckable="True"
                                              IsChecked="True"
                                              Click="ViewModeMenuItem_Click"/>
                                    <MenuItem x:Name="GridViewMenuItem"
                                              Header="Grid view"
                                              InputGestureText="G"
                                              IsCheckable="True"
                                              Click="ViewModeMenuItem_Click"/>
                                </MenuItem>
                                <MenuItem Header="Sort by">
                                    <MenuItem x:Name="SortCreatedMenuItem"
                                              Header="Newest (date created)"
                                              IsCheckable="True"
                                              IsChecked="True"
                                              Tag="NewestCreated"
                                              Click="SortMenuItem_Click"/>
                                    <MenuItem x:Name="SortModifiedMenuItem"
                                              Header="Newest (date modified)"
                                              IsCheckable="True"
                                              Tag="NewestModified"
                                              Click="SortMenuItem_Click"/>
                                    <MenuItem x:Name="SortNameMenuItem"
                                              Header="Name (A - Z)"
                                              IsCheckable="True"
                                              Tag="Name"
                                              Click="SortMenuItem_Click"/>
                                    <MenuItem x:Name="SortRandomMenuItem"
                                              Header="Randomized"
                                              IsCheckable="True"
                                              Tag="Random"
                                              Click="SortMenuItem_Click"/>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Explorer integration">
                                    <MenuItem Header="Install context menu"
                                              Click="InstallExplorerIntegrationMenuItem_Click"/>
                                    <MenuItem Header="Remove context menu"
                                              Click="RemoveExplorerIntegrationMenuItem_Click"/>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                    <Button x:Name="HelpButton"
                            Width="36"
                            Height="32"
                            Margin="4,0"
                            Click="HelpButton_Click"
                            ToolTip="Help"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            FocusVisualStyle="{x:Null}"/>
                    <TextBlock x:Name="FolderPathText"
                               Text="No folder selected"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               Width="260"
                               Margin="12,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="8,0,0,0">
                    <TextBlock x:Name="FileNameText"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                               VerticalAlignment="Center"
                               Text="File: --"
                               Width="220"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="MediaInfoText"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                               VerticalAlignment="Center"
                               Text="Size: --"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Background="Black">
            <Border Background="Transparent">
                <Image x:Name="ImageViewer"
                       Stretch="Uniform"
                       RenderTransformOrigin="0.5,0.5"
                       Visibility="Collapsed"
                       MouseLeftButtonDown="ImageViewer_MouseLeftButtonDown"
                       MouseLeftButtonUp="ImageViewer_MouseLeftButtonUp"
                       MouseMove="ImageViewer_MouseMove"/>
            </Border>
            <MediaElement x:Name="VideoViewer"
                          Stretch="Uniform"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Manual"
                          MediaOpened="VideoViewer_MediaOpened"
                          MediaEnded="VideoViewer_MediaEnded"
                          Visibility="Collapsed"
                          RenderTransformOrigin="0.5,0.5"
                          MouseLeftButtonDown="VideoViewer_MouseLeftButtonDown"
                          MouseLeftButtonUp="VideoViewer_MouseLeftButtonUp"
                          MouseMove="VideoViewer_MouseMove"/>
            <Border x:Name="VideoProgressPanel"
                    Grid.Row="1"
                    Background="#88000000"
                    CornerRadius="8"
                    Padding="10"
                    Margin="100,0,100,24"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Visibility="Collapsed"
                    Panel.ZIndex="30">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="VideoProgressSlider"
                            Grid.Column="0"
                            Minimum="0"
                            Maximum="1"
                            Value="0"
                            Margin="0,0,12,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            IsMoveToPointEnabled="True"
                            SmallChange="1"
                            LargeChange="5"
                            TickPlacement="None"
                            PreviewMouseLeftButtonDown="VideoProgressSlider_PreviewMouseLeftButtonDown"
                            PreviewMouseLeftButtonUp="VideoProgressSlider_PreviewMouseLeftButtonUp"
                            ValueChanged="VideoProgressSlider_ValueChanged"
                            LostMouseCapture="VideoProgressSlider_LostMouseCapture"
                            Thumb.DragStarted="VideoProgressSlider_DragStarted"
                            Thumb.DragCompleted="VideoProgressSlider_DragCompleted"/>
                    <TextBlock x:Name="VideoProgressText"
                               Grid.Column="1"
                               Text="00:00 / 00:00"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontFamily="Consolas"
                               FontSize="12"
                               TextAlignment="Right"
                               Width="120"/>
                </Grid>
            </Border>
            <ListBox x:Name="GridViewControl"
                     Background="Transparent"
                     BorderThickness="0"
                     Visibility="Collapsed"
                     Margin="12"
                     ScrollViewer.CanContentScroll="False"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     SelectionMode="Single"
                     SelectionChanged="GridViewControl_SelectionChanged"
                     MouseDoubleClick="GridViewControl_MouseDoubleClick">
                <ListBox.LayoutTransform>
                    <ScaleTransform x:Name="GridViewScaleTransform"
                                    ScaleX="1"
                                    ScaleY="1"/>
                </ListBox.LayoutTransform>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="180"
                                Height="180"
                                Margin="6"
                                Background="#222"
                                BorderBrush="#444"
                                BorderThickness="1"
                                CornerRadius="6">
                            <StackPanel>
                                <Grid Height="120">
                                    <Image Source="{Binding Thumbnail}"
                                           Stretch="UniformToFill"
                                           Visibility="{Binding IsImage, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    <Border Background="#55000000"
                                            Visibility="{Binding IsVideo, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="Video"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Path=FileName}"
                                                       Foreground="#CCCCCC"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <TextBlock Text="{Binding FileName}"
                                           Foreground="White"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="4,6,4,0"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border x:Name="MetadataPanel"
                    Background="#CC1E1E1E"
                    BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="6"
                    Margin="8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Width="320"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Metadata"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Button x:Name="CopyMetadataButton"
                                Content="Copy"
                                Margin="8,0,0,0"
                                Padding="6,2"
                                Click="CopyMetadataButton_Click"/>
                        <Button x:Name="CloseMetadataButton"
                                Content="X"
                                Margin="4,0,0,0"
                                Padding="6,2"
                                Click="CloseMetadataButton_Click"/>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1"
                                  Margin="0,6,0,6"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="MetadataTextBox"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </ScrollViewer>
                    <TextBlock Grid.Row="2"
                               Foreground="#CCCCCC"
                               FontSize="10"
                               Text="Press X to toggle metadata"/>
                </Grid>
            </Border>
        </Grid>
        <Border x:Name="SlideshowIndicator"
                Grid.RowSpan="2"
                Background="#AA000000"
                CornerRadius="40"
                Padding="24"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Panel.ZIndex="20">
            <TextBlock x:Name="SlideshowIndicatorText"
                       Text="â–¶"
                       Foreground="White"
                       FontSize="64"
                       FontFamily="Segoe UI Symbol"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        <Border x:Name="LoadingOverlay"
                Grid.RowSpan="2"
                Background="#80000000"
                Visibility="Collapsed">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="220"
                    Background="#FF222222"
                    Padding="16"
                    CornerRadius="8">
                <StackPanel>
                    <ProgressBar IsIndeterminate="True"
                                 Height="8"
                                 Foreground="#FF00B7FF"/>
                    <TextBlock Text="Loading files..."
                               Margin="0,12,0,0"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
